{% extends "base.html.twig" %}
{% block title %} Регистрация пользователя {% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <form class="form-horizontal" name="Login" method="POST">
                    <span class="heading">РЕГИСТРАЦИЯ</span>
                    {% for msg in result|slice(0,1) %}
                        <div class="alert alert-info">
                            {{ msg|upper }}
                        </div>
                    {% endfor %}
                    <div class="form-group">
                        <input type="text" class="form-control" value="{{ user.name }}" name="inputName" id="name" placeholder="Введите имя">
                        <i class="fa fa-user"></i>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" value="{{ user.surname }}" name="inputSurname" id="surname" placeholder="Введите фамилию">
                        <i class="fa fa-user"></i>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" value="{{ user.email }}" name="inputEmail" id="email" placeholder="Введите e-mail">
                        <i class="fa fa-at"></i>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" value="{{ user.login }}" name="inputLogin" id="login" placeholder="Придумайте логин">
                        <i class="fa fa-user"></i>
                    </div>
                    <div class="form-group help">
                        <input type="password" class="form-control" name="inputPassword" id="password" placeholder="Придумайте пароль">
                        <i class="fa fa-lock"></i>
                    </div>
                    <div class="form-group help">
                        <input type="password" class="form-control" name="inputPassword2" id="password2" placeholder="Введите пароль снова">
                        <i class="fa fa-lock"></i>
                    </div>
                    <div class="form-group">
                        <button type="submit" name="submit" class="btn btn-default">ЗАРЕГИСТРИРОВАТЬСЯ</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}