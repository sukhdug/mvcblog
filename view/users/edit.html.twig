{% extends "base.html.twig" %}
{% block title %} Редактирование пользователя {{ user.login }} {% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                {% for msg in result|slice(0,1) %}
                    <div class="alert alert-info">
                        {{ msg|upper }}
                    </div>
                {% endfor %}
                {% if deleted == false %}
                    <form name="EditUser" method="POST">
                        <div class="form-group">
                            <label for="inputTitle">Фамилия</label>
                            <input type="text" name="inputSurname" class="form-control" id="surname" placeholder="Введите фамилию" value="{{ user.surname }}">
                        </div>
                        <div class="form-group">
                            <label for="inputAuthor">Имя</label>
                            <input type="text" name="inputName" class="form-control" id="name" placeholder="Введите имя" value="{{ user.fname }}">
                        </div>
                        <div class="form-group">
                            <label for="inputAuthor">Логин</label>
                            <input type="text" name="inputLogin" class="form-control" id="login" placeholder="Введите логин" value="{{ user.login }}">
                        </div>
                        <div class="form-group">
                            <label for="inputAuthor">Эл.почта</label>
                            <input type="email" name="inputEmail" class="form-control" id="email" placeholder="Введите e-mail" value="{{ user.email }}">
                        </div>
                        <div class="form-group">
                            <button type="submit" name="submit" class="btn btn-primary" id="submit">Сохранить</button>
                            <button type="submit" name="delete" class="btn btn-danger delete_user" id="submit">Удалить</button>
                        </div>
                    </form>
                {% elseif deleted == true %}
                    <h1></h1>
                    <a href="/users"><button type="button" class="btn btn-primary">Список пользователей</button></a>
                {% endif %}
            </div>
        </div>
    </div>
    <script src="/template/js/delete_user.js" type="text/javascript"></script>
{% endblock %}